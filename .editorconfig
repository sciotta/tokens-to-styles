# This configuration MUST follow the standard established in the
# https://git.pipefy.net/pipefy/frontend-quality-assurance

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
